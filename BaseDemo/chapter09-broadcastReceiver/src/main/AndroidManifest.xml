<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chapter09_broadcastreceiver">
    <!-- 系统震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 自定义权限,广播发送方的权限-->
    <permission android:name="com.example.chapter09_broadcastreceiver.ORDER_PERMISSION"/>

    <!-- 使用自定义的权限,广播接收方的权限-->
    <uses-permission android:name="com.example.chapter09_broadcastreceiver_extra.ORDER_PERMISSION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demo_11_27">

        <activity
            android:name=".BroadCastPermissionActivity"
            android:exported="true" />


        <!-- 设置支持画中画模式 -->
        <activity
            android:name=".ReturnDesktopActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 配置变更的豁免情况 configChanges 属性的取值 -->
        <!-- 设置屏幕默认为竖屏 -->
        <activity
            android:name=".ChangeDirectionActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LifeCycleTestActivity"
            android:exported="true" />
        <activity
            android:name=".AlarmActivity"
            android:exported="true" />
        <activity
            android:name=".SystemNetWorkActivity"
            android:exported="true" />
        <activity
            android:name=".SystemMinuteActivity"
            android:exported="true" />

        <!-- 静态注册广播接收者 -->
        <receiver
            android:name=".receiver.ShockReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.chapter09_broadcastreceiver" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".BroadStaticActivity"
            android:exported="true" />
        <activity
            android:name=".BroadOrderActivity"
            android:exported="true" />
        <activity
            android:name=".BroadStandardActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>