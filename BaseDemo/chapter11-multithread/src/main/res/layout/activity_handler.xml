<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plus.HandlerActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接收Message"
        android:gravity="center"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="发送EmptyMessage"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="发送Message"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="定时器效果"
        android:textSize="17sp"/>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:max="100"
        android:progress="50"
        style="?android:attr/progressBarStyleHorizontal"/>

    <Button
        android:id="@+id/btn_post_runnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="添加Runnable到主线程"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_post_runnable_operate_main_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="添加Runnable到主线程,并更新页面"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_post_runnable_operate_main_thread_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="其他异步更新UI线程方法"
        android:textSize="17sp"/>

</LinearLayout>