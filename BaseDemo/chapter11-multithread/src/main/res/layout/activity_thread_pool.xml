<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plus.ThreadPoolActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_create_cached_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建缓存线程池"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_create_fixed_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建定长线程池"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_create_single_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建单线程线程池"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_create_scheduled_thread_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建定时线程池"
        android:textSize="17sp"/>

</LinearLayout>