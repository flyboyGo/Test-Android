<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chapter11_thread">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaseDemo">
        <activity
            android:name=".view_pager.ViewPagerActivity"
            android:exported="true" />
        <activity
            android:name=".plus.AsyncTaskActivity"
            android:exported="true" />
        <activity
            android:name=".plus.HandlerActivity"
            android:exported="true" />
        <activity
            android:name=".plus.ThreadPoolActivity"
            android:exported="true" />
        <activity
            android:name=".plus.ThreadCreateActivity"
            android:exported="true" />
        <activity
            android:name=".base.SimpleHandlerActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>