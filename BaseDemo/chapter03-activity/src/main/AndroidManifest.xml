<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chapter03">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demo_11_27">
        <activity
            android:name=".intentExtra.ParcelableEndActivity"
            android:exported="true" />
        <activity
            android:name=".intentExtra.ParcelableStartActivity"
            android:exported="true" />
        <activity
            android:name=".intentExtra.SerializableEndActivity"
            android:exported="true" />
        <activity
            android:name=".intentExtra.SerializableStartActivity"
            android:exported="true" />
        <activity
            android:name=".IntentFilerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.chapter03.IntentFilterActivity" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- <data -->
                <!-- android:mimeType="type" -->
                <!-- android:scheme="uri" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name=".MetaDataActivity"
            android:exported="true">
            <!-- 元数据 -->
            <meta-data
                android:name="weather"
                android:value="晴天" />
        </activity>
        <activity
            android:name=".ReadStringActivity"
            android:exported="true" />
        <activity
            android:name=".ActResponseActivity"
            android:exported="true" />
        <activity
            android:name=".ActRequestActivity"
            android:exported="true" />
        <activity
            android:name=".ActReceiveActivity"
            android:exported="true" />
        <activity
            android:name=".ActSendActivity"
            android:exported="true" />
        <activity
            android:name=".ActionUriActivity"
            android:exported="true" />
        <activity
            android:name=".LoginSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".LoginInputActivity"
            android:exported="true" />
        <activity
            android:name=".JumpSecondActivity"
            android:exported="true" />
        <activity
            android:name=".JumpFirstActivity"
            android:exported="true" />
        <activity
            android:name=".ActFinishActivity"
            android:exported="true" />
        <activity
            android:name=".ActStartActivity"
            android:exported="true" /> <!-- 主活动页面 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 元数据定义快捷方式 -->
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
    </application>

</manifest>