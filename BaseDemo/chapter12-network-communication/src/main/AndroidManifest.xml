<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chapter12_network_communication">

    <!-- Glide,load函数加载网络图片的uri时,需要的网络许可 -->
    <!-- okHttp网络请求的权限需要 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 外部sd卡的读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaseDemo">
        <activity
            android:name=".okHttp.OkHttpExtraActivity"
            android:exported="true" />
        <activity
            android:name=".retrofit.RetrofitActivity"
            android:exported="true" />
        <activity
            android:name=".okHttp.OkHttpActivity"
            android:exported="true" />
        <activity
            android:name=".glide.GlideActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>