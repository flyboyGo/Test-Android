<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chapter06_client">

    <!-- 跨进程(应用)传递数据-->
    <!-- 出于安全考虑, Android 11 要求引用事先说明需要访问的其他软件包 -->
    <queries>

        <!-- 方式一、指明需要访问的软件包的包名 -->
        <!-- <package android:name="com.example.chapter06_server"/> -->


        <!-- 方式二 、指明需要访问的完整的类路径-->
        <provider android:authorities="com.example.chapter06_server.UserInfoProvider" />
    </queries>

    <!-- 允许通讯录、短信相关权限的开启(静态指定开启权限) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />


    <!-- 外部读取权限,静态指定 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- 在外部安装apk应用程序时需要-->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <!-- 注意，从Android 8.0开始，安装应用需要申请权限REQUEST_INSTALL_PACKAGES，
         于是打开AndroidManifest.xml，补充下面的权限申请配置： -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demo_11_27">
        <activity
            android:name=".ProviderApkActivity"
            android:exported="true" />
        <activity
            android:name=".ProviderMmsActivity"
            android:exported="true" />
        <activity
            android:name=".SendMmsActivity"
            android:exported="true" />
        <activity
            android:name=".MonitorSmsActivity"
            android:exported="true" />
        <activity
            android:name=".ContactAddActivity"
            android:exported="true" />
        <activity
            android:name=".PermissionHungryActivity"
            android:exported="true" />
        <activity
            android:name=".PermissionLazyActivity"
            android:exported="true" />
        <activity
            android:name=".ContentWriterActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 兼容Android7.0之后，把访问文件的Uri方式改为FileProvider -->
        <!-- android:grantUriPermissions 必须设置为 true -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/file_provider"
            android:grantUriPermissions="true">

            <!-- 配置哪些路径是可以通过FileProvider访问的 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>