<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_turn_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="跳转到第二个页面"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发送广播"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_static_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发送静态广播"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_order_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发送有序广播"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_local_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发送本地广播"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btn_send_whole_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发送全局广播"
        android:textSize="17sp"/>

</LinearLayout>